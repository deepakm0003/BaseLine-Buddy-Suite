{
  "name": "baseline-buddy",
  "displayName": "Baseline Buddy",
  "description": "AI-powered Baseline compliance checking for modern web features",
  "version": "1.0.0",
  "publisher": "baseline-buddy",
  "repository": {
    "type": "git",
    "url": "https://github.com/baseline-buddy/baseline-buddy-suite"
  },
  "homepage": "https://github.com/baseline-buddy/baseline-buddy-suite",
  "bugs": {
    "url": "https://github.com/baseline-buddy/baseline-buddy-suite/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "baseline",
    "web-features",
    "browser-compatibility",
    "css",
    "javascript",
    "html",
    "ai",
    "linter"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baseline-buddy.scanWorkspace",
        "title": "Scan Workspace for Baseline Issues",
        "category": "Baseline Buddy"
      },
      {
        "command": "baseline-buddy.scanFile",
        "title": "Scan Current File",
        "category": "Baseline Buddy"
      },
      {
        "command": "baseline-buddy.showDashboard",
        "title": "Show Baseline Dashboard",
        "category": "Baseline Buddy"
      },
      {
        "command": "baseline-buddy.autoFix",
        "title": "Auto-fix Baseline Issues",
        "category": "Baseline Buddy"
      },
      {
        "command": "baseline-buddy.showFeatureInfo",
        "title": "Show Feature Information",
        "category": "Baseline Buddy"
      }
    ],
    "configuration": {
      "title": "Baseline Buddy",
      "properties": {
        "baseline-buddy.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Baseline Buddy"
        },
        "baseline-buddy.severity": {
          "type": "string",
          "enum": ["error", "warning", "info"],
          "default": "warning",
          "description": "Default severity for Baseline issues"
        },
        "baseline-buddy.enableAI": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered suggestions and auto-fixes"
        },
        "baseline-buddy.autoFix": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix Baseline issues when possible"
        },
        "baseline-buddy.showHoverInfo": {
          "type": "boolean",
          "default": true,
          "description": "Show Baseline information on hover"
        },
        "baseline-buddy.includePatterns": {
          "type": "array",
          "default": ["**/*.css", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.html"],
          "description": "File patterns to include in Baseline checking"
        },
        "baseline-buddy.excludePatterns": {
          "type": "array",
          "default": ["**/node_modules/**", "**/dist/**", "**/build/**"],
          "description": "File patterns to exclude from Baseline checking"
        }
      }
    },
    "languages": [
      {
        "id": "css",
        "extensions": [".css"]
      },
      {
        "id": "javascript",
        "extensions": [".js", ".jsx"]
      },
      {
        "id": "typescript",
        "extensions": [".ts", ".tsx"]
      },
      {
        "id": "html",
        "extensions": [".html", ".htm"]
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "baseline-buddy.scanFile",
          "when": "editorTextFocus",
          "group": "baseline-buddy"
        },
        {
          "command": "baseline-buddy.autoFix",
          "when": "editorTextFocus",
          "group": "baseline-buddy"
        }
      ],
      "explorer/context": [
        {
          "command": "baseline-buddy.scanWorkspace",
          "when": "explorerResourceIsFolder",
          "group": "baseline-buddy"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "baseline-buddy-issues",
          "name": "Baseline Issues",
          "when": "baseline-buddy.hasIssues"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "baseline-buddy",
          "title": "Baseline Buddy",
          "icon": "$(checklist)"
        }
      ],
      "panel": [
        {
          "id": "baseline-buddy-panel",
          "title": "Baseline Buddy",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "baseline-buddy": [
        {
          "id": "baseline-buddy-issues",
          "name": "Issues",
          "when": "baseline-buddy.hasIssues"
        },
        {
          "id": "baseline-buddy-features",
          "name": "Features",
          "when": "baseline-buddy.enabled"
        }
      ]
    },
    "problemMatchers": [
      {
        "owner": "baseline-buddy",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "clean": "rm -rf out"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {
    "@baseline-buddy/core": "file:../core"
  }
}
